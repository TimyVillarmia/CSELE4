@page
@model CSELE4_CRUD.Pages.Products.DeleteModel

@{
    ViewData["Title"] = "Delete";
}


<div class="position-absolute top-50 start-50 translate-middle bg-light rounded">
    <div class="py-3 px-4" style="width: 680px;">
        <div class="row">
            <h2 class="col">Delete Product</h2>
            <div class="col position-relative">
                <a asp-page="Index" class="position-absolute top-0 end-0">
                    <span class="material-symbols-outlined">
                        close
                    </span>
                </a>
            </div>
        </div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.ProductCategory)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.ProductCategory)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Content)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Product.Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>


