@page
@model CSELE4_Activity.Pages.Products.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container" style="border: 1px solid black; border-radius:5px; width:50%; height:auto; padding:10px;">
    <div class="d-flex flex-row mb-2">
        <p style="font-size:25px;">←</p>
        <h1 style="font-size:25px; margin:5px 5px 5px 10px;">ADD PRODUCT</h1>
    </div>
    <hr />
    <div class="row" style="width:100%; margin-right:0;">
        <div class="col-md-4" style="width:100%;">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Product.Name" class="control-label">Product Name</label>
                    <input asp-for="Product.Name" class="form-control" placeholder="Product Name" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Description" class="control-label">Description</label>
                    <input asp-for="Product.Description" class="form-control" placeholder="Description" />
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col">
                        <label asp-for="Product.Category" class="control-label">Category</label>
                        <input asp-for="Product.Category" class="form-control" placeholder="Category" />
                        <span asp-validation-for="Product.Category" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Product.Price" class="control-label">Price</label>
                        <input asp-for="Product.Price" class="form-control" placeholder="Price" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Product.FormFile" class="control-label">Image</label>
                    <input type="file" asp-for="Product.FormFile" class="form-control" />
                    <span asp-validation-for="Product.FormFile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" style="float:right; margin-top:10px;" />
                </div>
            </form>
        </div>
    </div>
<div>
    <a asp-page="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
