@page
@model CSELE4_Activity.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}

<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<div class="container w-auto">
    <div>
        <nav class="navbar  border-bottom border-body" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="images/human.jpg" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
                    Brand
                </a>

                <div class="d-flex">
                    <a class="navbar-brand" href="#">
                        <img src="images/shopping-cart.png" alt="Logo" width="20" height="20" class="d-inline-block align-text-top" style="margin-left:25;">
                        <p class="card-text" style="color:black; font-size:small; margin-left:5;">Cart</p>
                    </a>
                    <a class="navbar-brand" href="#">
                        <img src="images/heart.png" alt="Logo" width="20" height="20" class="d-inline-block align-text-top">
                        <p class="card-text" style="color:black; font-size:small; margin-right:5;">Wishlist</p>
                    </a>
                    <a class="navbar-brand" href="#">
                        <img src="images/user1.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">
                    </a>
                </div>
            </div>
        </nav>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-2" style="border:1px solid black; padding: 20px;">
                <div style="width:auto; height:auto; border:1px solid black;">
                    <h1 style="font-size:25px; font-weight:bold; margin-left:10px;">FILTERS</h1>
                    <div class="container">
                        <div class="dropdown mb-2">
                            <button class="btn btn-secondary dropdown-toggle mb-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                FILTER TYPE
                            </button>
                            <ul class="dropdown-menu mb-2">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </div>
                        <div class="dropdown mb-2">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                FILTER TYPE
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </div>
                        <div class="dropdown mb-2">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                FILTER TYPE
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">Action</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8" style="border:1px solid black">
                <div class="d-inline-flex w-100 p-2" style="border:1px solid black">
                    <h1>ALL PRODUCTS</h1>
                    <button style="float:right;">
                        <a asp-page="Create" id="btnclick">Add Product +</a>
                    </button>
                </div>
                <div>
                    <div class="row w-auto">
                        @foreach (var item in Model.Product)
                        {
                            <div class="col-3 p-1 m-3" style="border: 1px solid black">
                                <div class="card h-100">
                                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Content)" class="img-fluid card-img-top h-100 w-100" alt="@item.Name" />
                                    <div class="card-body">
                                        <h5 class="card-title" style="margin-bottom:0; font-size:25px;">@item.Name</h5>
                                        <p class="card-text" style="margin-bottom:10px;">@item.Description</p>
                                        @*                         <p class="card-text" style="margin-bottom:0;">@item.Category</p> *@
                                        <div class="d-flex justify-content-between">
                                            <span class="card-text" style=" font-size:20px; font-weight:bold;">@(item.Price.ToString("c"))</span>
                                            <a class="btn btn-danger btn-sm" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                                            @*                     <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> *@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>


    </div>


</div>


