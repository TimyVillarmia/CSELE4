<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CSELE4 MVC</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CSELE4_MVC.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>
<body class="container-fluid vh-100">
    <div class="row mt-5 h-100">
        <div class="col-sm-2">
            <header>
                <nav class="">
                    <div class="container-fluid">
                        <div class="d-flex justify-content-between mb-4">
                            <a class="navbar-brand h1" asp-area="" asp-controller="Products" asp-action="Index">CSELE4 MVC</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="material-symbols-outlined class=" navbar-toggler-icon"">
                                    dock_to_left
                                </span>
                            </button>
                        </div>
                        <div class="">
                            <ul class="nav flex-column">
                                <li class="nav-item d-flex align-items-center">
                                    <span class="material-symbols-outlined">
                                        home
                                    </span>
                                    <a class="nav-link text-light ms-1" asp-area="" asp-controller="Products" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item  d-flex align-items-center">
                                    <span class="material-symbols-outlined">
                                        shopping_bag
                                    </span>
                                    <a class="nav-link text-light ms-1" asp-area="" asp-controller="Cart" asp-action="Privacy">Cart</a>
                                </li>
                                <li class="nav-item d-flex align-items-center">
                                    <span class="material-symbols-outlined">
                                        favorite
                                    </span>
                                    <a class="nav-link text-light ms-1" asp-area="" asp-controller="Cart" asp-action="Privacy">Wishlist</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
            <div class="my-4">
                <h2 class="text-uppercase my-2">Filters</h2>
                <div class="d-grid gap-0 row-gap-2">
                    <div >
                        <button class="btn bg-black dropdown-toggle text-uppercase" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            category
                        </button>
                        <ul class="dropdown-menu">
                        </ul>
                    </div>
                    <div class="dropdown">
                        <button class="btn bg-black  dropdown-toggle text-uppercase" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            price
                        </button>
                        <ul class="dropdown-menu">
                        </ul>
                    </div>
                </div>
                
            </div>
        </div>
        
        <div class="container col-sm-10">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
