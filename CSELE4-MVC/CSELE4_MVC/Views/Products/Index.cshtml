@model IEnumerable<CSELE4_MVC.Models.Products>

@{
    ViewData["Title"] = "Index";
}


<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Products</h2>
        <p>
            <a asp-action="Create" class="btn btn-primary">Add Product</a>
        </p>
    </div>
    @if (Model.Any())
    {
        <div class="row row-cols-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <img class="img-fluid" src="data:image;base64,@System.Convert.ToBase64String(item.Content)" alt="@item.Name" />
                    <div class="mt-1">
                        <h4 style="margin: 0%;">
                            @Html.DisplayFor(modelItem => item.Name)
                        </h4>
                        <p style="margin: 0%;">
                            @Html.DisplayFor(modelItem => item.Description)
                        </p>
                        <div class="d-flex align-items-center justify-content-between">
                            <h5>
                                @Html.DisplayFor(modelItem => item.Price)
                            </h5>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <span class="material-symbols-outlined">
                                        edit
                                    </span>
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="container-fluid d-flex d-flex justify-content-center align-items-center border text-center" style="height: 500px;">
            <div>
                <h3>Add your products</h3>
                <p>Your product catalog is currently empty. Click the "Add Product" button to get started.</p>
            </div>
            
        </div>
    }

</div>



